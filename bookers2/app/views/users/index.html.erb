
   <div class="container">
     <div class="row">
      <div class="col-xs-3">
        <% if @new_book.errors.any? %>
          <p><%= @new_book.errors.count %>errors prohibited this obj from being saved:</p>
        <% @new_book.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
        <% end %>
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image,:fill, 60,60, fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <td><%=current_user.name%></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%=current_user.introduction%></td>
            </tr>
          </tbody>
        </table>


        <div class="row">
        <%= link_to "",edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_13250" %>
          <h3>New book</h3>
          <%= form_for(@new_book) do |f| %>
            <h5>Title</h5>
            <%= f.text_field :title %>
            <h5>Opinion</h5>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-9">
        <h3>Users</h3>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name </th>
              <th colspan ="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image,:fill, 60,60, fallback: "no_image.jpg" %></td>
              <td> <%= user.name %> </td>
              <td> <%= link_to "Show", user_path(user.id) %> </td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
